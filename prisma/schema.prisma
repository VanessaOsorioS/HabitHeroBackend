generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mission {
  id                   Int           @id @default(autoincrement())
  title                String
  description          String?
  type                 MissionType
  dueDate              DateTime?
  durationMinutes      Int?
  category             String?
  priority             Int
  difficulty           Int
  daily                Boolean
  reminderEnabled      Boolean      @default(false)
  creationDate         DateTime      @default(now())
  statusHistories     MissionStatusHistory[]
  rewards              Reward[]
}

model Reward {
  id           Int         @id @default(autoincrement())
  rewardType   RewardType
  value        Int
  description  String?
  missionId    Int
  mission      Mission     @relation(fields: [missionId], references: [id])
}

model MissionStatusHistory {
  id        Int          @id @default(autoincrement())
  mission   Mission      @relation(fields: [missionId], references: [id])
  missionId Int
  status    MissionState
  date      DateTime
}

enum RewardType {
  XP
  COIN
  BADGE
  COLLECTABLE
  TITLE
}

enum MissionState {
  COMPLETED
  PENDING
  FAILED
  IN_PROGRESS
}

enum MissionType {
  STUDY
  TASK
}

